<!-- 1、基本使用 ： 块级元素，独占一行 -->
<view class="box1">大鹏一日同风起</view>

<!-- 2、hover-class：当用户按下组件时显示的样式 -->
<!-- hover-start-time按住后多久出现点击态 -->
<!-- hover-stay-time 手指松开后点击态保留时间 -->
<view class="box2" hover-class="hover-view" hover-start-time="5000" hover-stay-time="5000">
  扶摇直上九万里
</view>

<!-- hover-stop-propagation 是否组织祖先元素出现点击态 默认值为false -->
<view class="box3" hover-class="hover-box3" hover-start-time="50" hover-stay-time="50">
  <view class="box2" 
  hover-class="hover-view" 
  hover-start-time="0" 
  hover-stay-time="100"
  hover-stop-propagation="{{true}}"
  >
    扶摇直上九万里
  </view>
</view>